<div class="search">

  {% paginate search.results by 48 %}

    <div class="results">

      <div class="container px-2">

        <div class="row no-gutters">

          {% for result in search.results %}

            {% if result.object_type == 'product' %}

              {% assign product = result %}

              <div class="col-6 px-2">

                {% include 'product' %}

              </div>

            {% endif %}

          {% endfor %}

        </div>

      </div>

    </div>

    {% include 'pagination' %}

  {% endpaginate %}

</div>
