.wholesale-fancybox {
  width: 35vw;
  min-width: 400px;
  max-width: 500px;
}
.wholesale-fancybox p {
  text-align: center;
}

.wholesale-contact-form {
  list-style: none;
  display: flex;
  flex-flow: column nowrap;
  padding: 0;
}
.wholesale-contact-form form {
  margin: 0 auto;
}
.wholesale-contact-form li.type-text,
.wholesale-contact-form li.type-textarea {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 15px;
  align-items: baseline;
}
.wholesale-contact-form label {
  margin-right: 15px;
}
.wholesale-contact-form input,
.wholesale-contact-form textarea {
  font-family: Roboto, sans-serif;
  font-size: 20px;
  text-transform: none;
}
.wholesale-contact-form li.type-submit {
  align-self: center;
}
.wholesale-contact-form #name,
.wholesale-contact-form #email,
.wholesale-contact-form #inputStreet,
.wholesale-contact-form #inputCity {
  width: 100%;
}
.wholesale-contact-form #inputState {
  width: 50%;
}
.wholesale-contact-form #inputZip {
  width: 50%;
}

.fadeInUp {
  -webkit-animation: fadeInAnimation ease 3s;
          animation: fadeInAnimation ease 3s;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
  -webkit-animation-fill-mode: forwards;
          animation-fill-mode: forwards;
}

@-webkit-keyframes fadeInAnimation {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes fadeInAnimation {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.pf-product-section {
  overflow-y: inherit;
  background-repeat: no-repeat;
  background-position: -20vw center;
  background-size: 70%;
}

.pf-product-quantity {
  width: 100%;
  justify-content: space-between;
  border: 2px solid #fff;
}

.pf-product .selectors .quantity {
  display: none;
}
.pf-product .selectors .rc_block {
  display: flex;
  padding: 0;
  text-align: left;
  width: 100%;
}
.pf-product .selectors .form-group,
.pf-product .selectors .form-inline label {
  display: flex;
  align-items: center;
  margin-bottom: 0;
}
.pf-product .selectors .form-group {
  flex: 0 0 auto;
  flex-flow: row wrap;
  -ms-flex-align: center;
  min-width: 100%;
  padding: 0;
}
.pf-product .selectors #rc_radio_options {
  width: 100%;
}
.pf-product .selectors .form-inline input:checked + div .rc_select {
  height: 2.5em;
}
.pf-product .pf-variant {
  margin-bottom: 5px !important;
}
.pf-product .pf-p-variant-radio label {
  width: 100%;
}
.pf-product .pf-p-variant-radio > div {
  flex: 1 0 auto;
}
.pf-product .pf-p-variant-radio > div:last-child {
  margin-right: 0 !important;
}
.pf-product .pf-p-variant-radio > div:not(:last-child) {
  margin-right: 5px !important;
  margin-bottom: 0 !important;
}

.pf-product-benefit ul {
  list-style: none;
  padding-left: 0;
  font-family: "Roboto", sans-serif;
  line-height: 1.5;
}
.pf-product-benefit h5 {
  font-family: Chalet Comprime Cologne Sixty, sans-serif;
  text-transform: uppercase;
  color: #42c7e7;
  font-size: 1.5rem;
}

.product-uses {
  text-transform: uppercase;
  font-size: 1.5rem;
  line-height: 1.5;
}
.product-uses li {
  list-style: none;
}
.product-uses .fas {
  color: #42c7e7;
  left: 0;
  position: absolute;
  font-size: 20px;
  line-height: 2.3;
}

.product-nutrition .product-link p {
  text-decoration: underline;
}
@media (max-width: 767px) {
  .product-nutrition .product-link p {
    font-size: 15px;
  }
}
.product-nutrition .product-nutrition-list {
  display: flex;
  flex-flow: row wrap;
  line-height: 2.5;
  font-family: Roboto, sans-serif;
}
.product-nutrition .nutrition-inner-row > div {
  flex: 0 0 auto;
  max-width: none;
}
@media (max-width: 767px) {
  .product-nutrition .nutrition-inner-row > div {
    flex: 1 0 50%;
    max-width: none;
  }
}
.product-nutrition dt {
  flex-basis: 20%;
  padding: 2px 4px;
  color: #fff;
  border-bottom: 1px solid #fff;
}
@media (max-width: 991px) {
  .product-nutrition dt {
    flex-basis: 50%;
  }
}
@media (max-width: 767px) {
  .product-nutrition dt {
    font-size: 16px;
  }
}
.product-nutrition dd {
  flex-basis: 70%;
  flex-grow: 1;
  margin: 0;
  text-align: right;
  padding: 2px 4px;
  border-bottom: 1px solid #fff;
}
@media (max-width: 991px) {
  .product-nutrition dd {
    flex-basis: 50%;
  }
}
@media (max-width: 767px) {
  .product-nutrition dd {
    font-size: 16px;
  }
}

.pf-product-icons .product-icons {
  display: flex;
  justify-content: center;
  padding: 0;
}
.pf-product-icons .product-icons li {
  list-style: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pf-product-icons .product-icons li p {
  width: -webkit-min-content;
  width: -moz-min-content;
  width: min-content;
  text-align: center;
  line-height: 1;
  font-family: Chalet Comprime Cologne Sixty, sans-serif;
  font-size: 25px;
  text-transform: uppercase;
}
@media (max-width: 767px) {
  .pf-product-icons .product-icons li p {
    font-size: 18px;
  }
}
.pf-product-icons .product-icons li img {
  margin: 0.5rem;
  max-width: 65px;
}
@media (max-width: 767px) {
  .pf-product-icons .product-icons li img {
    max-width: 40px;
    margin: 0.3rem;
  }
}

/* animations */
.product-image {
  z-index: 1;
  -webkit-filter: none;
          filter: none;
  transition: all 0.3s linear;
  transition-delay: 0s;
}

.background {
  width: 100%;
  position: absolute;
  z-index: 0;
  opacity: 0;
  left: 0;
  top: 0;
  transition: opacity 0.3s linear;
  transition-delay: 0s;
}

.product:hover .product-image {
  transform: scale(0.9);
  -webkit-filter: drop-shadow(5px 5px 18px #000);
  filter: drop-shadow(5px 5px 18px #000);
}

.product:hover .background {
  opacity: 1;
}

.fade-in {
  -webkit-animation: fadeIn 0.5s linear 0s 1 normal none;
          animation: fadeIn 0.5s linear 0s 1 normal none;
}

@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
/* END animations */
.selectors .rc_block__type--active label select option {
  z-index: 0;
}

.selectors .rc_block__type--active label select option:checked::after,
.pf-product .selectors .rc_block__type--active label select option:checked::after {
  content: "";
  background-color: #fff !important;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.selectors .rc_block__type label select,
.selectors input:not(:checked) label select {
  display: block;
  background-color: transparent;
  color: #fff;
  height: 0;
  border: none;
  overflow: hidden;
  width: 100%;
  margin: 0.5rem 0 0;
  padding: 0;
}

.pf_products .selectors .rc_block__type label select {
  width: 125px;
}

/* subscription frequency buttons SHOW */
.selectors .rc_block__type--active label select,
.selectors input:checked label select {
  height: -webkit-fit-content;
  height: -moz-fit-content;
  height: fit-content;
}

.selectors .rc_block__type label select option,
.pf-p-variant-radio > div input + label {
  width: auto;
  padding: 0.875em;
  text-align: center;
  display: inline-block;
  cursor: pointer;
  border: 2px solid #fff;
  border-radius: 0;
  color: #fff;
  font: 65% "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.selectors .rc_block__type label select option,
.pf-product .selectors .rc_block__type label select option {
  width: calc(25% - 0.2rem);
  z-index: 0;
}

.pf-products .selectors .rc_block__type label select option:not(:last-child),
.pf-product .selectors .rc_block__type label select option:not(:last-child) {
  margin-right: 0.25rem;
}

.product-details-row {
  height: auto !important;
}

/* leaves graphic images */
[data-pf-type=Body]:before {
  content: "";
  background-image: url(https://cdn.shopify.com/s/files/1/0063/2333/9362/files/left-leaf.png?v=1592356305);
  background-repeat: no-repeat;
  position: absolute;
  background-size: contain;
  width: 9vw;
  height: 400px;
  top: 150vh;
  z-index: 9999999;
}

@media (max-width: 991px) and (min-width: 768px) {
  [data-pf-type=Body]:before {
    height: 165px;
    top: 31%;
  }
}
@media (max-width: 767px) {
  [data-pf-type=Body]:before {
    width: 97px;
    height: 130px;
    top: 24%;
  }
}
[data-pf-type=Body]:after {
  content: "";
  background-image: url(https://cdn.shopify.com/s/files/1/0063/2333/9362/files/right-leaf.png?v=1592356305);
  background-repeat: no-repeat;
  position: absolute;
  background-size: contain;
  width: 9vw;
  height: 328px;
  top: 48vh;
  right: 0;
}

@media (max-width: 991px) and (min-width: 768px) {
  [data-pf-type=Body]:after {
    top: 70vh;
  }
}
@media (max-width: 767px) {
  [data-pf-type=Body]:after {
    width: 80px;
  }
}
/* ipad media queries */
