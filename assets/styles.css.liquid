  .quantity-row > div:first-child {
    padding-right: 0 !important;
  }

  .quantity-row > div:last-child {
    flex-basis: 28%;
  }

  .form-group.quantity {
    display: flex;
  }

  .quantity-row {
    margin: 0;
  }

  .quantity-row > div {
    padding-top: 0;
    padding-bottom: 0;
  }

  button.product__add-to-cart-button {
    margin-left: 0 !important;
  }

  .name-price-row > div {
    padding: 0 !important;
  }
}
/* END ipad media queries */
@media (max-width: 767px) {
  .form-group.quantity {
    justify-content: flex-end;
    flex: 1 0 8%;
    display: flex;
    flex-flow: row nowrap;
    width: 100%;
  }
}
