.wholesale-fancybox {
  width: 35vw;
  min-width: 400px;
  max-width: 500px;
}
.wholesale-fancybox p {
  text-align: center;
}

.wholesale-contact-form {
  list-style: none;
  display: flex;
  flex-flow: column nowrap;
  padding: 0;
}
.wholesale-contact-form form {
  margin: 0 auto;
}
.wholesale-contact-form li.type-text,
.wholesale-contact-form li.type-textarea {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 15px;
  align-items: baseline;
}
.wholesale-contact-form label {
  margin-right: 15px;
}
.wholesale-contact-form input,
.wholesale-contact-form textarea {
  font-family: Roboto, sans-serif;
  font-size: 20px;
  text-transform: none;
}
.wholesale-contact-form li.type-submit {
  align-self: center;
}
.wholesale-contact-form #name,
.wholesale-contact-form #email,
.wholesale-contact-form #inputStreet,
.wholesale-contact-form #inputCity {
  width: 100%;
}
.wholesale-contact-form #inputState {
  width: 50%;
}
.wholesale-contact-form #inputZip {
  width: 50%;
}

/* animations */
.product-image {
  z-index: 1;
  -webkit-filter: none;
          filter: none;
  transition: all 0.3s linear;
  transition-delay: 0s;
}

.background {
  width: 100%;
  position: absolute;
  z-index: 0;
  opacity: 0;
  left: 0;
  top: 0;
  transition: opacity 0.3s linear;
  transition-delay: 0s;
}

.product:hover .product-image {
  transform: scale(0.9);
  -webkit-filter: drop-shadow(5px 5px 18px #000);
  filter: drop-shadow(5px 5px 18px #000);
}

.product:hover .background {
  opacity: 1;
}

.fade-in {
  -webkit-animation: fadeIn 0.5s linear 0s 1 normal none;
          animation: fadeIn 0.5s linear 0s 1 normal none;
}

@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
/* END animations */
.selectors .rc_block__type label ol {
  float: left;
  list-style: none;
  background-color: transparent;
  color: #fff;
  height: 0;
  font-size: 16px;
  border: none;
  overflow: hidden;
  width: 100%;
  margin: 0.5rem 0 0;
  padding: 0;
}

.selectors .rc_block__type--active label ol li.ui-selected {
  z-index: 0;
  background: #F39814;
  color: white;
}

.selectors .rc_block__type--active label ol li:checked::after {
  content: "";
  background-color: var(--light) !important;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.selectors .rc_block__type label select,
.selectors input:not(:checked) label select {
  display: block;
  background-color: transparent;
  color: #fff;
  height: 0;
  border: none;
  overflow: hidden;
  width: 100%;
  margin: 0.5rem 0 0;
  padding: 0;
}

/* subscription frequency buttons SHOW */
.selectors .rc_block__type--active label ol,
.selectors input:checked label ol {
  height: auto;
  max-height: 3rem;
}

.pf-p-variant-radio > div input + label {
  width: auto;
  padding: 0.875em;
  text-align: center;
  display: inline-block;
  cursor: pointer;
  border: 2px solid #fff;
  border-radius: 0;
  color: #fff;
  font: 65% "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.selectors .rc_block__type label ol li {
  width: calc(25% - 0.2rem);
  z-index: 0;
}

.pf-products .selectors .rc_block__type label ol li:not(:last-child) {
  margin-right: 0.25rem;
}

.product-details-row {
  height: auto !important;
}

.product-details-column {
  display: flex;
  flex-direction: column;
}

/* leaves graphic images */
[data-pf-type=Body]:before {
  content: "";
  background-image: url(https://cdn.shopify.com/s/files/1/0063/2333/9362/files/left-leaf.png?v=1592356305);
  background-repeat: no-repeat;
  position: absolute;
  background-size: contain;
  width: 9vw;
  height: 400px;
  top: 150vh;
  z-index: 9999999;
}

[data-pf-type=Body]:after {
  content: "";
  background-image: url(https://cdn.shopify.com/s/files/1/0063/2333/9362/files/right-leaf.png?v=1592356305);
  background-repeat: no-repeat;
  position: absolute;
  background-size: contain;
  width: 9vw;
  height: 328px;
  top: 48vh;
  right: 0;
}

/* ipad media queries */
@media (max-width: 991px) and (min-width: 768px) {
  .quantity-row > div:first-child {
    padding-right: 0 !important;
  }

  .quantity-row > div:last-child {
    flex-basis: 28%;
  }

  .form-group.quantity {
    display: flex;
  }

  .quantity-row {
    margin: 0;
  }

  .quantity-row > div {
    padding-top: 0;
    padding-bottom: 0;
  }

  button.product__add-to-cart-button {
    margin-left: 0 !important;
  }

  .name-price-row > div {
    padding: 0 !important;
  }

  [data-pf-type=Body]:after {
    width: 125px;
  }

  [data-pf-type=Body]:before {
    width: 100px;
    top: 31%;
  }
}
/* END ipad media queries */
@media (max-width: 767px) {
  .form-group.quantity {
    justify-content: flex-end;
    flex: 1 0 8%;
    display: flex;
    flex-flow: row nowrap;
    width: 100%;
  }

  [data-pf-type=Body]:after {
    width: 119px;
  }

  [data-pf-type=Body]:before {
    width: 97px;
    height: 174px;
    top: 34%;
  }
}
