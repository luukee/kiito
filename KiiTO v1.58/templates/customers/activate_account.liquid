<div class="activate">

  <div class="py-5 my-5">

    <div class="container">

      <div class="row justify-content-center">

        <div class="col-lg-4">

          <div class="title">

            <div class="text-center">

              <h1 class="mb-3">

                Activate Account

              </h1>

            </div>

          </div>

          {% form 'activate_customer_password' %}

            {{ form.errors | default_errors }}

            <div class="form-group">

              <input class="form-control border-primary py-2" type="password" name="customer[password]" value="Password">

            </div>

            <div class="form-group">

              <input class="form-control border-primary py-2" type="password" name="customer[password_confirmation]" value="Password Confirmation">

            </div>

            <button class="btn btn-block btn-primary py-2" type="submit">

              Activate

            </button>

          {% endform %}

        </div>

      </div>

    </div>

  </div>

</div>
