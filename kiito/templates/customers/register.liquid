<div class="register">

  <div class="py-5 my-5">

    <div class="container">

      <div class="row justify-content-center">

        <div class="col-lg-4">

          <div class="title">

            <div class="text-center">

              <h1 class="mb-3">

                Sign Up

              </h1>

            </div>

          </div>

          {% form 'create_customer' %}

            {{ form.errors | default_errors }}

            <div class="form-group">

              <input class="form-control border-primary py-2" type="text" name="customer[first_name]" placeholder="First Name" autofocus {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>

            </div>

            <div class="form-group">

              <input class="form-control border-primary py-2" type="text" name="customer[last_name]" placeholder="Last Name" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

            </div>

            <div class="form-group">

              <input class="form-control border-primary py-2" type="email" name="customer[email]" placeholder="Email" spellcheck="false" autocomplete="off" autocapitalize="off" {% if form.email %}value="{{ form.email }}"{% endif %}>

            </div>

            <div class="form-group">

              <input class="form-control border-primary py-2" type="password" name="customer[password]" placeholder="Password">

            </div>

            <button class="btn btn-block btn-primary py-2 user-registration" type="submit">

              Sign Up

            </button>

          {% endform %}

        </div>

      </div>

    </div>

  </div>

</div>
