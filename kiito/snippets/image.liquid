<div class="image">

  {% unless format != blank %}

    {% assign format = 'pjpg' %}

  {% endunless %}

  {% unless ratio != blank %}

    {% assign ratio = '3by4' %}

  {% endunless %}

  {% unless scale != blank %}

    {% assign scale = 2 %}

  {% endunless %}

  {% unless size != blank %}

    {% assign size = 'large' %}

  {% endunless %}

  <div class="embed-responsive embed-responsive-{{ ratio }}">

    <div class="embed-responsive-item">

      <img class="lazyload w-100" data-srcset="{{ image.src | img_url : size , scale : scale , format : format }}" src="{{ image.src | img_url : size , scale : scale , format : format }}" srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="{{ image.alt | escape }}" data-expand="-50">

      <noscript>

        <img class="w-100" src="{{ image.src | img_url : size , scale : scale , format : format }}" alt="{{ image.alt | escape }}">

      </noscript>

    </div>

  </div>

</div>

{% endcomment %}
