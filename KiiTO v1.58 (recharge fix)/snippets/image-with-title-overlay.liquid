<div class="col-lg-6 p-0">

  <div class="image-with-title-overlay" data-transition="entrance" style="transform : translateY( 50px )">

    <div class="pb-5 mb-5">

      <div class="card bg-transparent border-0">

        <div class="card-img">

          <div class="embed-responsive embed-responsive-4by3">

            <div class="embed-responsive-item">

              <img class="lazyload w-100" data-src="{{ block.settings.image | img_url : 'master' }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-expand="-50">

            </div>

          </div>

        </div>

        <div class="card-img-overlay justify-content-center align-items-center d-flex p-0">

          <div class="title" data-transition="entrance" style="transform : translateY( 50px )">

            <div class="text-center">

              <h1 class="text-uppercase display-1 m-0">

                {{ block.settings.title }}

              </h1>

            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>
